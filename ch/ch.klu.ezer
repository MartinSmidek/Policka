  menu leve {type:'left', active:*
    menu cisla {title:'Statistika',type:'group', _sys:'*'
      item pocet {title:'[fa-line-chart] počet kontaktů'       ,par:{fce:'stat'} }
      item       {title:'[fa-line-chart]vývoj obdarování'      ,par:{fce:'vyvoj', p:'2014'} }
    }
    menu dary {title:'Kontrola darů',type:'group', _sys:'*'
      item {title:'[fa-exclamation] duplicity letošních darů',        par:{fce:'dary_dupl',p:'0'} }
      item {title:'[fa-exclamation-circle] duplicity loňských darů',  par:{fce:'dary_dupl',p:'1'} }
//      item {title:'[fa-exclamation-circle fa-red] ... OPRAVIT',       par:{fce:'dary_dupl',p:'1',corr:'1'} }
    }
    func onclick(i:ezer){
      rp.header(i);
      panel.property({height:'*',min_height:8000});
      rp.append(php.klu_inf(i.par));
    }
  }
  use rp: form right [12,4,,]
}
